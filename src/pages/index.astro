import ProjectCard from '../components/ui/ProjectCard.astro'
import Label from '../components/ui/Label.astro'
import SkillLayout from '../components/ui/SkillLayout.astro'
import PostPreview from '@/components/posts/PostPreview.astro'

const languages = ['python', 'javascript', 'typescript', 'php', 'c#', 'go', 'ruby', 'sql', 'html', 'css']
const frontend = ['react', 'vue', 'astro', 'svelte', 'next.js', 'tailwindcss', 'bootstrap', 'material ui']
const backend = [
  'asp.net',
  'node.js',
  'express',
  'django',
  'flask',
  'gin',
  'ruby on rails',
  'postgres',
  'mysql',
  'sqlserver',
  'cassandra'
]
const infrastructure = ['aws', 'azure', 'kubernetes', 'docker', 'terraform', 'github actions', 'circleci', 'buildkite']
